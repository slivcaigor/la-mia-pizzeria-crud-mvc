@model PizzaFormModel

<div class="container">
    <form asp-controller="Pizza" asp-action="Update" method="post" asp-route-id="@Model.Pizzas.Id">
        @Html.AntiForgeryToken()
        <div class="validation-summary-errors" asp-validation-summary="All"></div>
        <div class="mb-3">
            <strong>Nome:</strong>
            <input asp-for="Pizzas.Name" class="d-block w-100" />
        </div>
        <div class="mb-3">
            <strong>Descrizione:</strong>
            <input asp-for="Pizzas.Description" class="d-block w-100" />
        </div>
        <div class="mb-3">
            <strong>Prezzo:</strong>
            <input asp-for="Pizzas.Price" class="d-block w-100" />
        </div>
        <div class="mb-3">
            <strong>Link Immagine:</strong>
            <input asp-for="Pizzas.Image" class="d-block w-100" />
        </div>

        <div class="mb-3">
            <strong>Categoria:</strong>
            <select asp-for="Pizzas.CategoryId">
                <option value="" disabled selected hidden>Please select a category</option>
                @foreach (Category category in Model.Categories)
                {
                    @if (Model.Pizzas.CategoryId == category.Id)
                    {
                        <option value="@category.Id" selected>@category.Name</option>
                    }
                    else
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                }
            </select>
        </div>
        <div class="text-end">
            <input type="submit" class="btn btn-small btn-info" value="Save">
        </div>
    </form>
</div>